{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"commonjs": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"linebreak-style": ["error", "unix"],
		// "quotes": ["error", "double"],
		"semi": ["error", "always"],

		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": "error"
	}
}
